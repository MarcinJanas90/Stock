<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Stocks", "Index", "Stock", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                @Html.Partial("_ManageAccount");
            </div>
        </div>
    </div>
    <div class="row">
        <div id="alertDiv" class="col-lg-12" style="text-align:center"></div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/Chart.min.js"></script>
    <script src="~/Scripts/jquery.signalR-2.2.0.min.js"></script>
    <script src="~/signalr/hubs"></script>
    <script src="~/Scripts/Stock/StartConnectionToStockHub.js"></script>
    <script src="~/Scripts/Stock/RenderStockPrices.js"></script>
    <script src="~/Scripts/Stock/RenderWallet.js"></script>
    <script src="~/Scripts/Stock/UpdateStockPrices.js"></script>
    <script src="~/Scripts/Stock/BuyShares.js"></script>
    <script src="~/Scripts/Stock/UpdateWalletValues.js"></script>
    <script src="~/Scripts/Stock/ShowChart.js"></script>
    <script src="~/Scripts/Stock/UpdateChart.js"></script>
    <script src="~/Scripts/Stock/ConnectionProblem.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
